<?xml version="1.0"?>
<robot xmlns:xacro="http://ros.org/wiki/xacro">
  <xacro:macro name="testbed_walls" params="prefix">

    <!-- collision geometry macros -->
    <xacro:include filename="$(find safe_energetics_testbed)/urdf/testbed_walls_geometry.xacro" />
    
    <!-- link list -->
    <link name="${prefix}testbed_walls">
      <xacro:testbed_walls_geometry />

      <visual name="visual">
        <geometry>
          <mesh filename="package://safe_energetics_testbed/meshes/testbed_walls/testbed_walls.stl"/>
        </geometry>
        <material name="grey">
          <color rgba=".1 .1 .1 1"/>
        </material>        
      </visual>
    </link>
   

     
    
  </xacro:macro>
</robot>
